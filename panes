#!/usr/bin/env bash

# Original author: GekkoP
# Original source: http://linuxbbq.org/bbs/viewtopic.php?f=4&t=1656#p33189

d=3 b=9
for j in d b; do
  for i in {0..7}; do
    printf -v "$j$i" %b "\e[${!j}${i}m"
  done
done

# Reset.
r=$'\e[0m'

cat << EOF

 ${d0}████${b0}▄${r}  ${d1}████${b1}▄${r}  ${d2}████${b2}▄${r}  ${d3}████${b3}▄${r}  ${d4}████${b4}▄${r}  ${d5}████${b5}▄${r}  ${d6}████${b6}▄${r}  ${d7}████${b7}▄${r}
 ${d0}████${b0}█${r}  ${d1}████${b1}█${r}  ${d2}████${b2}█${r}  ${d3}████${b3}█${r}  ${d4}████${b4}█${r}  ${d5}████${b5}█${r}  ${d6}████${b6}█${r}  ${d7}████${b7}█${r}
 ${d0}████${b0}█${r}  ${d1}████${b1}█${r}  ${d2}████${b2}█${r}  ${d3}████${b3}█${r}  ${d4}████${b4}█${r}  ${d5}████${b5}█${r}  ${d6}████${b6}█${r}  ${d7}████${b7}█${r}
 ${b0} ▀▀▀▀  ${b1} ▀▀▀▀   ${b2}▀▀▀▀   ${b3}▀▀▀▀   ${b4}▀▀▀▀   ${b5}▀▀▀▀   ${b6}▀▀▀▀   ${b7}▀▀▀▀${r}
EOF
